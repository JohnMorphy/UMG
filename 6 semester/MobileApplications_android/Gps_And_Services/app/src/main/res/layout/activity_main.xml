<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bind_button"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:onClick="bind"
            android:text="bind" />

        <Button
            android:id="@+id/unbind_button"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="unbind"
            android:text="unbind" />

        <Button
            android:id="@+id/testConnection_button"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="testServiceConnection"
            android:text="test" />

        <Button
            android:id="@+id/run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="runGenerator"
            android:text="run/stop" />
    </LinearLayout>

    <TextView
        android:id="@+id/informationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- information bar -"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/randomValueDisplay"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_marginTop="20px"
        android:text="- Random numbers will be displayed here -"
        android:textAlignment="center"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/sumDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sum = 0"
        android:textAlignment="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:text="GPS data"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/gpsData"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="location: --- \n latitude: --- \n longitude: --- \n height: --- \n distance in meters: --- \n distance travelled: ---" />

</LinearLayout>